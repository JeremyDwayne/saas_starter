<%# Toast icons for different notification types %>
<% case type.to_s %>
<% when 'success', 'notice' %>
  <div class="flex items-center justify-center w-6 h-6 bg-green-100 rounded-full">
    <%= icon 'check', class: 'w-4 h-4 text-green-600' %>
  </div>

<% when 'error', 'alert' %>
  <div class="flex items-center justify-center w-6 h-6 bg-red-100 rounded-full">
    <%= icon 'x', class: 'w-4 h-4 text-red-600' %>
  </div>

<% when 'warning' %>
  <div class="flex items-center justify-center w-6 h-6 bg-yellow-100 rounded-full">
    <%= icon 'exclamation-triangle', class: 'w-4 h-4 text-yellow-600' %>
  </div>

<% when 'info' %>
  <div class="flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full">
    <%= icon 'information-circle', class: 'w-4 h-4 text-blue-600' %>
  </div>

<% else %>
  <div class="flex items-center justify-center w-6 h-6 bg-gray-100 rounded-full">
    <%= icon 'information-circle', class: 'w-4 h-4 text-gray-600' %>
  </div>
<% end %>