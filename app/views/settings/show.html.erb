<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Account Settings</h1>
      <p class="mt-1 text-sm text-gray-600">Manage your account information, subscription, and preferences</p>
    </div>

    <!-- Profile Information Section -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Profile Information</h3>

        <%= form_with model: @user, url: update_profile_settings_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <% if @user.errors[:name].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:name].first %></p>
              <% end %>
            </div>

            <div>
              <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email_address, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <% if @user.errors[:email_address].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email_address].first %></p>
              <% end %>
            </div>
          </div>

          <div>
            <%= form.label :avatar_url, "Avatar URL", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 flex items-center space-x-4">
              <% if @user.avatar_url.present? %>
                <img class="h-12 w-12 rounded-full object-cover" src="<%= @user.avatar_url %>" alt="Current avatar">
              <% else %>
                <div class="h-12 w-12 rounded-full bg-gray-300 flex items-center justify-center">
                  <%= icon 'user', class: 'h-6 w-6 text-gray-400' %>
                </div>
              <% end %>
              <%= form.url_field :avatar_url, class: "flex-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "https://example.com/avatar.jpg" %>
            </div>
            <% if @user.errors[:avatar_url].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @user.errors[:avatar_url].first %></p>
            <% end %>
          </div>

          <div class="flex justify-end">
            <%= form.submit "Update Profile", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Password & Security Section -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Password & Security</h3>

        <%= form_with model: @user, url: update_password_settings_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
              <%= form.password_field :password, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Enter new password" %>
              <% if @user.errors[:password].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password].first %></p>
              <% end %>
              <p class="mt-1 text-sm text-gray-500">Minimum 8 characters</p>
            </div>

            <div>
              <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
              <%= form.password_field :password_confirmation, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Confirm new password" %>
              <% if @user.errors[:password_confirmation].any? %>
                <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password_confirmation].first %></p>
              <% end %>
            </div>
          </div>

          <div class="flex justify-end">
            <%= form.submit "Update Password", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Connected Accounts Section -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Connected Accounts</h3>
        <div class="space-y-4">
          <% if @user.omni_auth_identities.any? %>
            <% @user.omni_auth_identities.each do |identity| %>
              <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <% case identity.provider %>
                    <% when 'google_oauth2' %>
                      <%= icon 'google', class: 'h-6 w-6 text-red-500' %>
                    <% when 'github' %>
                      <%= icon 'github', class: 'h-6 w-6 text-gray-900' %>
                    <% end %>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900">
                      <%= identity.provider.humanize %> Account
                    </p>
                    <p class="text-sm text-gray-500">
                      Connected as <%= identity.uid %>
                    </p>
                  </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Connected
                </span>
              </div>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500">No connected accounts</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Subscription & Billing Section -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Subscription & Billing</h3>

        <% if Current.user.subscribed? %>
          <% subscription = Current.user.subscription %>
          <div class="space-y-4">
            <% if subscription.on_trial? %>
              <!-- Trial Status -->
              <div class="flex items-center justify-between p-4 bg-blue-50 border border-blue-200 rounded-md">
                <div>
                  <div class="flex items-center">
                    <%= icon 'clock', class: 'h-5 w-5 text-blue-400 mr-2' %>
                    <p class="text-sm font-medium text-blue-800">Free Trial Active</p>
                  </div>
                  <div class="mt-2 text-sm text-blue-700">
                    <p><strong>Plan:</strong> <%= subscription.name&.humanize || "Trial Plan" %></p>
                    <p><strong>Trial ends:</strong> <%= subscription.trial_ends_at.strftime("%B %d, %Y") %></p>
                    <p><strong>Status:</strong> <%= subscription.status.humanize %></p>
                  </div>
                </div>
              <% else %>
              <!-- Active Subscription -->
              <div class="flex items-center justify-between p-4 bg-green-50 border border-green-200 rounded-md">
                <div>
                  <div class="flex items-center">
                    <%= icon 'check-circle', class: 'h-5 w-5 text-green-400 mr-2' %>
                    <p class="text-sm font-medium text-green-800">Active Subscription</p>
                  </div>
                  <div class="mt-2 text-sm text-green-700">
                    <p><strong>Plan:</strong> <%= subscription.name&.humanize || "Active Plan" %></p>
                    <% if subscription.ends_at %>
                      <p><strong>Renews:</strong> <%= subscription.ends_at.strftime("%B %d, %Y") %></p>
                    <% end %>
                    <% if subscription.canceled? %>
                      <p class="text-orange-600"><strong>Status:</strong> Canceled (active until <%= subscription.ends_at.strftime("%B %d, %Y") %>)</p>
                    <% else %>
                      <p><strong>Status:</strong> <%= subscription.status.humanize %></p>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <div class="flex space-x-2">
                <% if Current.user.subscribed? %>
                  <% portal_session = Current.user.payment_processor.billing_portal(return_url: settings_url) %>
                  <%= link_to "Manage Billing", portal_session.url,
                      target: "_blank",
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                <% else %>
                  <%= link_to "View Plans", pricing_path,
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="flex items-center justify-between p-4 bg-gray-50 border border-gray-200 rounded-md">
            <div>
              <p class="text-sm font-medium text-gray-900">No Active Subscription</p>
              <p class="text-sm text-gray-500 mt-1">Choose a plan to get started with premium features</p>
            </div>
            <%= link_to "View Plans", pricing_path,
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Account Management Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Account Management</h3>

        <!-- Delete Account -->
        <div class="border border-red-200 rounded-md p-4 bg-red-50">
          <div class="flex">
            <div class="flex-shrink-0">
              <%= icon 'warning-triangle', class: 'h-5 w-5 text-red-400' %>
            </div>
            <div class="ml-3 flex-1">
              <h4 class="text-sm font-medium text-red-800">Delete Account</h4>
              <p class="text-sm text-red-700 mt-1">
                Permanently delete your account and all associated data. This action cannot be undone.
              </p>

              <%= form_with url: destroy_account_settings_path, method: :delete, local: true, class: "mt-4" do |form| %>
                <div class="mb-3">
                  <%= form.label :confirmation, 'Type "DELETE" to confirm:', class: "block text-sm font-medium text-red-700" %>
                  <%= form.text_field :confirmation, class: "mt-1 block w-full max-w-xs border-red-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm", placeholder: "DELETE" %>
                </div>

                <%= form.submit "Delete My Account", class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                    data: { confirm: "Are you absolutely sure you want to delete your account? This action cannot be undone." } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>