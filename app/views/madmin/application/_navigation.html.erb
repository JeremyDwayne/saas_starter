<nav class="p-4 space-y-2">
  <!-- Dashboard Link -->
  <div class="mb-6">
    <%= link_to madmin_root_path,
        class: "flex items-center space-x-3 text-gray-700 hover:text-gray-900 hover:bg-gray-50 px-3 py-2 rounded-lg transition-colors group #{'bg-red-50 text-red-700 border-r-4 border-red-500' if request.path == madmin_root_path}" do %>
      <svg class="w-5 h-5 #{'text-red-500' if request.path == madmin_root_path}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v4H8V5z"></path>
      </svg>
      <span class="font-medium">Dashboard</span>
    <% end %>
  </div>

  <!-- Main Navigation -->
  <div class="space-y-1">
    <% Madmin.menu.render do |item| %>
      <% if item.url %>
        <%= link_to item.url,
            class: "flex items-center space-x-3 text-gray-700 hover:text-gray-900 hover:bg-gray-50 px-3 py-2 rounded-lg transition-colors group #{'bg-red-50 text-red-700 border-r-4 border-red-500' if request.path.start_with?(item.url)}" do %>
          <!-- Dynamic icon based on label -->
          <% if item.label.downcase.include?('user') %>
            <svg class="w-5 h-5 #{'text-red-500' if request.path.start_with?(item.url)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          <% elsif item.label.downcase.include?('role') %>
            <svg class="w-5 h-5 #{'text-red-500' if request.path.start_with?(item.url)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          <% elsif item.label.downcase.include?('session') %>
            <svg class="w-5 h-5 #{'text-red-500' if request.path.start_with?(item.url)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          <% elsif item.label.downcase.include?('payment') || item.label.downcase.include?('billing') %>
            <svg class="w-5 h-5 #{'text-red-500' if request.path.start_with?(item.url)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
          <% else %>
            <svg class="w-5 h-5 #{'text-red-500' if request.path.start_with?(item.url)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          <% end %>
          <span class="font-medium"><%= item.label %></span>
        <% end %>
      <% else %>
        <!-- Section Headers -->
        <div class="px-3 py-2 mt-6 mb-2">
          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= item.label %></h4>
        </div>
      <% end %>

      <!-- Sub-items -->
      <% if item.items.any? %>
        <div class="ml-6 space-y-1">
          <% item.items.each do |subitem| %>
            <%= link_to subitem.url,
                class: "flex items-center space-x-3 text-gray-600 hover:text-gray-900 hover:bg-gray-50 px-3 py-2 rounded-lg transition-colors text-sm #{'bg-red-50 text-red-700 border-r-4 border-red-500' if request.path.start_with?(subitem.url)}" do %>
              <div class="w-2 h-2 bg-gray-400 rounded-full #{'bg-red-500' if request.path.start_with?(subitem.url)}"></div>
              <span><%= subitem.label %></span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</nav>

<!-- Sidebar Footer -->
<footer class="mt-auto p-4 border-t border-gray-200">
  <div class="space-y-3">
    <!-- App Stats -->
    <div class="bg-gray-50 rounded-lg p-3">
      <div class="text-xs text-gray-500 mb-2 text-center">System Overview</div>
      <div class="grid grid-cols-2 gap-2 text-center">
        <div>
          <div class="text-lg font-semibold text-gray-900"><%= User.count %></div>
          <div class="text-xs text-gray-500">Users</div>
        </div>
        <div>
          <div class="text-lg font-semibold text-gray-900"><%= Session.count %></div>
          <div class="text-xs text-gray-500">Active Users</div>
        </div>
      </div>
    </div>
  </div>
</footer>
