<%# OAuth button partial %>
<%= form_tag path, method: :post, data: { turbo: false }, class: "w-full" do %>
  <button
    type="submit"
    class="
      w-full flex items-center justify-center px-4 py-3 border border-gray-300
      rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50
      focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500
      transition-colors
    "
  >
    <div class="flex items-center">
      <% case provider %>
      <% when 'google' %>
        <%= icon 'google', class: 'w-5 h-5 mr-3' %>
        Continue with Google
      <% when 'github' %>
        <%= icon 'github', class: 'w-5 h-5 mr-3' %>
        Continue with GitHub
      <% else %>
        Continue with
        <%= provider.humanize %>
      <% end %>
    </div>
  </button>
<% end %>

